@model ABC_Retail.Models.Product

@{
    ViewData["Title"] = "Add Product";
}

<div class="container mt-5 p-4 bg-light rounded shadow-sm">
    <h2 class="mb-4 text-center">Add New Product</h2>

    <form asp-action="AddProduct" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" required />
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>

        <div class="mb-3">
            <label class="form-label">Image</label>
            <input type="file" name="file" class="form-control" required />
            <input asp-for="ImageURL" type="hidden" /> <!-- Filled after blob upload -->
        </div>

        <div class="mb-3">
            <label asp-for="Quantity" class="form-label"></label>
            <input asp-for="Quantity" type="number" class="form-control" required />
        </div>

        <div class="mb-3">
            <label asp-for="Price" class="form-label"></label>
            <input asp-for="Price" type="number" class="form-control" required />
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary px-5">Add Product</button>
        </div>
    </form>
</div>

<style>
    body {
        background-color: #f8f9fa; /* soft grey background */
    }

    .container {
        max-width: 600px;
    }

    h2 {
        color: #0d6efd; /* primary bootstrap color */
    }

    .btn-primary {
        background-color: #0d6efd;
        border: none;
        transition: background-color 0.2s;
    }

        .btn-primary:hover {
            background-color: #0b5ed7;
        }
</style>
