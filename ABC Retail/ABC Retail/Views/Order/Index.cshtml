@model IEnumerable<ABC_Retail.Models.Order>

@{
    ViewData["Title"] = "Orders";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center text-primary">Order List</h2>

    <div class="mb-3 text-center">
        <a asp-action="AddOrder" class="btn btn-success px-4">Create New Order</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle bg-white shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>Order Id</th>
                    <th>Customer Id</th>
                    <th>Product Id</th>
                    <th>Quantity</th>
                    <th>Total Price</th>
                    <th>Order Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.RowKey)</td>
                        <td>@Html.DisplayFor(modelItem => item.CustomerId)</td>
                        <td>@Html.DisplayFor(modelItem => item.ProductId)</td>
                        <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                        <td>@Html.DisplayFor(modelItem => item.TotalPrice)</td>
                        <td>@Html.DisplayFor(modelItem => item.OrderDate)</td>
                        <td>
                            <form asp-action="Delete" method="post" style="display:inline;">
                                <input type="hidden" name="partitionKey" value="@item.PartitionKey" />
                                <input type="hidden" name="rowKey" value="@item.RowKey" />
                                <input type="hidden" name="customerName" value="@item.CustomerId" />
                                <input type="hidden" name="productName" value="@item.ProductId" />
                                <button type="submit" class="btn btn-danger btn-sm"
                                        onclick="return confirm('Are you sure you want to delete this Order?');">
                                    Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa; /* soft grey background */
    }

    h2 {
        color: #0d6efd; /* bootstrap primary color */
    }

    .table {
        background-color: #fff;
        border-radius: 8px;
    }

    .btn-success {
        background-color: #198754;
        border: none;
    }

        .btn-success:hover {
            background-color: #157347;
        }

    .btn-danger {
        transition: background-color 0.2s;
    }

        .btn-danger:hover {
            background-color: #dc3545cc;
        }
</style>

